import SwiftUI

// MARK: - Shared player state
final class PlayerManager: ObservableObject {
    @Published var currentStation: Station? = nil
}

struct Station: Identifiable, Equatable {
    let id = UUID()
    let name: String
    let subtitle: String
    let imageName: String
}

